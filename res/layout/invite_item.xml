<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"  >
    <ImageView 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/InvitePicImg"
		android:layout_alignParentLeft="true"
		android:layout_margin="10dp"
		
		android:background="#aa9955"
        />
	<Button 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/InviteRefuseBtn"
	    android:text="Refuse"
	    android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
	    />
	<Button 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/InviteAcceptBtn"
	    android:text="Accept"
	    android:layout_toLeftOf="@id/InviteRefuseBtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
	    />
    <TextView   
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Friend Name" 
        android:id="@+id/InviteName"
        android:layout_toLeftOf="@id/InviteAcceptBtn"
        android:layout_toRightOf="@id/InvitePicImg"
       	android:layout_margin="10dp"
        android:layout_centerVertical="true"
        />   

</RelativeLayout>